{
  "name": "matrix-suduko",
  "version": "1.0.0",
  "description": "A stunning Matrix-themed Sudoku game with cross-platform support",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "web": "node src/server.js",
    "test": "jest"
  },
  "keywords": ["sudoku", "matrix", "game", "cross-platform", "electron"],
  "author": "Matrix Sudoku Team",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "build": {
    "appId": "com.matrix.sudoku",
    "productName": "Matrix Sudoku",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
